{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block content %}
  <div class="site-wrap">
    <h1>Edit a book</h1>
    <form action="{{path('book_update_process', {bookId:book.getId()})}}" method="post">
        <legend>Title:</legend>
        <input type="text" id="title" name="title" value="{{book.title}}" rows="5" cols="8">
        <legend>Author:</legend>
        <input type="text" id="author" name="author" value="{{book.author}}">
        <legend>ISBN:</legend>
        <input type="text" id="isbn" name="isbn" value="{{book.isbn}}">
        <legend>Description:</legend>
        <textarea type="text" id="description" name="description" rows="15" cols="40">{{book.description}}</textarea>
        <legend>Image URL:</legend>
        <input id="image" name="image" type="url" pattern="https?://.+" oninvalid="this.setCustomValidity('Please match the requested format')">
        <br/>
        <br/>
        <input type="submit" name="update_book" value="Edit book" class="btn"/>
    </form>
  </div>
{% endblock %}