{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block content %}
  <div class="site-wrap">
    <h1>Add a book</h1>
    <form action="{{path('create_book_process')}}" method="post">
      <legend>Title:</legend>
      <input type="text" id="title" name="title" placeholder="Title" required="required" rows="5" cols="8">
      <legend>Author:</legend>
      <input type="text" id="author" name="author" placeholder="Author" required="required">
      <legend>ISBN:</legend>
      <input type="text" id="isbn" name="isbn" placeholder="XXXXX-XX-XX-X">
      <legend>Description:</legend>
      <textarea type="text" id="description" name="description" rows="15" cols="40" placeholder="Book description"></textarea>
      <legend>Image URL:</legend>
      <input id="image" name="image" type="url" pattern="https?://.+" oninvalid="this.setCustomValidity('Please match the requested format')" placeholder="Please add an image url">
      <br/>
      <br/>
      <input type="submit" name="create_book" value="Add book" class="btn"/>
    </form>
  </div>
{% endblock %}
