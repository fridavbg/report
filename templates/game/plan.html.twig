{% extends "base.html.twig" %}

{% block title %}{{ title }}
{% endblock %}

{% block content %}
  <div class="site-wrap">
    <h2>Cards in deck:</h2>
    <h3>
      {{ cards | length }}</h3>
    <h2>ScoreBoard</h2>
    <h3>{{player}}:
      {{dealerWins}}</h3>
    <h3>{{dealer}}:
      {{playerWins}}</h3>
  </div>

  <div class="site-wrap">
    <h1>{{ title }}</h1>

    {#
     #}
    <form action="{{path("draw-process")}}" method="post">
      <fieldset>
        <h2>{{player}}</h2>
        <h3>Player Cardhand total: 0</h3>
        <p class="btn-container">
          {% if cards | length <= 52 %}
            <input id="player" type="submit" name="player" value="Draw a card" class="btn">
          </p>
        {% elseif playerHand | length >= 1 %}
          <p>
            <input type="submit" value="Stop" class="standard-link">
          </p>
        </fieldset>
      {% endif %}
    </form>

    {#  #}
    <form action="{{path('game-plan')}}" method="post">
      <fieldset>
        <h2>{{dealer}}</h2>
        <h3>Cardhand total: 0</h3>
        <p class="btn-container">
          {% if cards | length <= 52 %}
            <input id="dealer" type="submit" name="dealer" value="Draw a card" class="btn">
          </p>
        </p>
      {% elseif dealerHand | length >= 1 %}
        <p>
          <input type="submit" value="Stop" class="standard-link">
        </p>
      </fieldset>
    {% endif %}
  </form>
</div>

{# #}
<code class="code">
  <h2>TEST BOX</h2>
  {{dump(playerHand)}}
  {{dump(dealerHand)}}
</code>

<div class="btn-container">
  <a href="{{path("game-home")}}" class="btn">
    Go back to game rules
  </a>
</div>
{% endblock %}