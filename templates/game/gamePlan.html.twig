{% extends "base.html.twig" %}

{% block title %}{{ title }}
{% endblock %}

{% block content %}
  <div class="site-wrap">
    <h1>{{ title }}</h1>
    <form action="draw">
      <fieldset>
        <h2>Player</h2>
        <p class="btn-container">
          <input type="submit" name="draw" value="Draw a card" class="btn">
        </p>
        <p>
          <input type="submit" value="Stop" class="standard-link">
        </p>
      </fieldset>
    </form>
    <div class="btn-container">
      <a href="{{path("game-home")}}" class="btn">
        Go back to game rules
      </a>
    </div>
  </div>
{% endblock %}